osThreadId_t pull_sensorHandle;
const osThreadAttr_t pull_sensor_attributes = {
  .name = "pull_sensor",
  .stack_size = 128 * 4,
  .priority = (osPriority_t) osPriorityNormal,
};
/* USER CODE BEGIN PV */
